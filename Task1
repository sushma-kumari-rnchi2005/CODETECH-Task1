        <body>
            <div class="container">
                <h2 align="center"> To-Do List </h2>
                <div class="input-form">
                    <input type="text" id="input-data" placeholder="Enter Your Task">
                    <button onclick="todo_fun()">ADD</button>
                    
                </div>
                 
                <div id="data-items">

                </div>
            </div>
        </body>
        <script>
             var input_data = document.getElementById("input-data");
             var data_items = document.getElementById("data-items");
             var alert_box = document.getElementById("alert-box");
             var task_complete = document.getElementById("task-complete1");

             function todo_fun(){
                if(input_data.value ==""){
                    alert("Enter Your Task");
                    input_data.style.border="1px solid red";

                     

                }
                else{
                    var newElement =document.createElement("ul");
                    newElement.innerHTML =`${input_data.value} <i class="fa-solid fa-trash"></i>`;
                    data_items.appendChild(newElement);
                    input_data.value ="";
                    input_data.style.border="1px solid rgb(8,55,45)";
                    newElement.querySelector("i").addEventListener("click",function(){
                        newElement.remove();
                    });
                    function count(i){
                         
                        var i;
                        i =1+i;
                        task_complete.innerHTML =`${i}`;
                        
                         
                    }
                    count(this.value);
                     





                }

             }
        </script>
